<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h4 text-gold mb-1">Produtos</h1>
    <p class="small text-muted mb-0">Gerencie os itens exibidos no catálogo.</p>
  </div>
  <div class="d-flex gap-2">
    <a href="/admin/categorias" class="btn btn-outline-gold btn-sm">Categorias</a>
    <a href="/admin/produtos/novo" class="btn btn-gold btn-sm">Novo produto</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-dark table-striped align-middle small">
    <thead class="border-gold-top">
      <tr>
        <th>Imagem</th>
        <th>Nome</th>
        <th>Categoria</th>
        <th>Preço</th>
        <th style="width: 140px;">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (!products || products.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center text-muted">
            Nenhum produto cadastrado ainda.
          </td>
        </tr>
      <% } %>
      <% products.forEach(function (p) { %>
        <tr>
          <td>
            <% if (p.image_url) { %>
              <img src="<%= p.image_url %>" alt="<%= p.name %>" class="img-thumbnail bg-dark border-gold" style="width: 64px; height: 64px; object-fit: cover;" />
            <% } else { %>
              <span class="text-muted">—</span>
            <% } %>
          </td>
          <td><%= p.name %></td>
          <td><%= p.category_name || '—' %></td>
          <td>
            <% if (p.price != null) { %>
              R$ <%= Number(p.price).toFixed(2).replace('.', ',') %>
            <% } else { %>
              —
            <% } %>
          </td>
          <td>
            <div class="d-flex gap-2">
              <a href="/admin/produtos/<%= p.id %>/editar" class="btn btn-sm btn-outline-gold">
                Editar
              </a>
              <form
                method="post"
                action="/admin/produtos/<%= p.id %>/deletar"
                onsubmit="return confirm('Tem certeza que deseja excluir este produto?');"
              >
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  Excluir
                </button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


