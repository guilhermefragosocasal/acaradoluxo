<div class="text-center mb-4">
  <h1 class="display-5 text-gold fw-bold">CatÃ¡logo</h1>
  <p class="text-muted">
    Descubra bijuterias e acessÃ³rios selecionados com um toque de luxo.
  </p>
</div>

<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex flex-wrap gap-2 justify-content-center">
      <a href="/" class="btn btn-outline-gold btn-sm">Todas as categorias</a>
      <% categories.forEach(function (cat) { %>
        <a href="/categoria/<%= cat.slug %>" class="btn btn-gold btn-sm">
          <%= cat.name %>
        </a>
      <% }) %>
    </div>
  </div>
</div>

<div class="row g-4">
  <% if (!products || products.length === 0) { %>
    <div class="col-12 text-center text-muted">
      Nenhum produto cadastrado ainda.
    </div>
  <% } %>
  <% products.forEach(function (product) { %>
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card product-card h-100 bg-black border-gold">
        <% if (product.image_url) { %>
          <img
            src="<%= product.image_url %>"
            class="card-img-top product-img"
            alt="<%= product.name %>"
          />
        <% } else { %>
          <div class="product-placeholder d-flex align-items-center justify-content-center">
            <span class="text-muted small">Sem imagem</span>
          </div>
        <% } %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-gold"><%= product.name %></h5>
          <% if (product.category_name) { %>
            <div class="small text-muted mb-1">
              <%= product.category_name %>
            </div>
          <% } %>
          <% if (product.description) { %>
            <p class="card-text small flex-grow-1">
              <%= product.description %>
            </p>
          <% } %>
          <% if (product.price != null) { %>
            <div class="fw-bold text-gold mb-2">
              R$ <%= Number(product.price).toFixed(2).replace('.', ',') %>
            </div>
          <% } %>
          <div class="d-flex flex-column gap-2 mt-auto">
            <% if (product.mercado_pago_link) { %>
              <a
                href="<%= product.mercado_pago_link %>"
                target="_blank"
                rel="noreferrer"
                class="btn btn-gold btn-sm"
              >
                ðŸ›’ Comprar Agora
              </a>
            <% } %>
            <a
              href="https://wa.me/<%= whatsappNumber %>?text=<%= encodeURIComponent('OlÃ¡, tenho interesse no produto: ' + product.name) %>"
              target="_blank"
              rel="noreferrer"
              class="btn <%= product.mercado_pago_link ? 'btn-outline-gold' : 'btn-gold' %> btn-sm"
            >
              ðŸ’¬ Falar no WhatsApp
            </a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>


